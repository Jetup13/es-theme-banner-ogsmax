<!--
Theme name:  Banner
Theme by:    Jetup13
Version:     1.0
-->

<theme>
<formatVersion>7</formatVersion>

    <include>./_art/extra/hidden.xml</include>

    <!--System View-->
    <view name="system">
	<image name="logo">
		<path>./_art/banners/${system.theme}.jpg</path>
	</image>

    <carousel name="systemcarousel">
	    <type>vertical</type>
        <pos>0 0</pos> 
        <size>1 1</size> 
        <color>00000000</color>
        <logoScale>1</logoScale>
        <logoSize>1 1</logoSize>
       <maxLogoCount>4</maxLogoCount>
	   <zIndex>2</zIndex>
    </carousel>

    <text name="systemInfo">
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <backgroundColor>00000000</backgroundColor>
        <forceUppercase>1</forceUppercase>
        <origin>0 0</origin>
        <pos>0.003 0.0</pos>
        <size>0.400 0.039</size>
        <fontSize>0.04</fontSize>
		<zIndex>5</zIndex>
		<visible>false</visible>
    </text>

    <helpsystem name="help">
	    <visible>false</visible>
		<pos>0 0</pos>
		<fontSize>0.01</fontSize>
		<zIndex>0</zIndex>
		<origin>1 1</origin>
    </helpsystem>
    </view>
	
    <!--Basic, Detailed, Video views-->
    <view name="basic, detailed, video">
    <image name="background" extra="true">
        <path>./_art/backgrounds/${system.theme}.jpg</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
		<zIndex>0</zIndex>
    </image>
	
    <image name="dark" extra="true">
        <path>./_art/assets/back.png</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
		<zIndex>1</zIndex>
    </image>

    <textlist name="gamelist">
	    <selectorColor>fffffff00</selectorColor>
        <primaryColor>ffffff</primaryColor>
		<selectedColor>15c49e</selectedColor>
        <secondaryColor>888888</secondaryColor>
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <pos>0 0.0</pos>
	    <size>0.425 1</size>
        <fontSize>0.034</fontSize>
        <lineSpacing>1.5</lineSpacing>
    </textlist>
	
	<helpsystem name="help">
        <pos>0 0</pos>
	    <origin>1 1</origin>
        <textColor>ffffff</textColor>
        <iconColor>ffffff</iconColor>
    </helpsystem>
    </view>
	
    <!--Mixed-->
    <view name="basic, detailed">
    <image name="md_image">
        <tile>false</tile>
        <origin>0.5 0.5</origin>
        <pos>0.72 0.50</pos>
        <maxSize>0.55 0.65</maxSize>
    </image>
    </view>
	
    <feature supported="video">
    <view name="video">
    <video name="md_video">
        <origin>0.5 0.5</origin>
        <pos>0.72 0.50</pos>
        <maxSize>0.55 0.65</maxSize>
        <delay>1.5</delay>
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
        </video>
    </view>
    </feature>

    <!-- Grid view -->
    <view name="grid">
    <imagegrid name="gamegrid">
		<margin>0.050 0.010</margin>
        <pos>0.015 0.5</pos>
        <size>0.970 0.5</size>
	    <scrollDirection>horizontal</scrollDirection>
		<autoLayout>3 1</autoLayout>
		<autoLayoutSelectedZoom>1.0</autoLayoutSelectedZoom>
		<centerSelection>true</centerSelection>
		<scrollLoop>true</scrollLoop>
    </imagegrid>
	
    <text name="gridtile">
        <color>00000000</color>
        <backgroundColor>00000000</backgroundColor>
        <fontPath>./_art/AdobeBlank.ttf</fontPath>
        <fontSize>0.01</fontSize>
	    <alignment>center</alignment>
	    <visible>false</visible>
    </text>
	
    <helpsystem name="help">
        <fontPath>./_art/Acre.otf</fontPath>
        <fontSize>0.02</fontSize>
        <origin>1 1</origin>
        <pos>0 0</pos>
        <textColor>ffffff</textColor>
        <iconColor>ffffff</iconColor>
    </helpsystem>
		
	<text name="md_name">
	    <color>15c49e</color>
        <pos>0.003 -0.03</pos>
	    <fontPath>./_art/Acre.otf</fontPath>
        <fontSize>0.04</fontSize>
        <size>1 0.10</size>
		<forceUppercase>1</forceUppercase>
        <alignment>left</alignment>
    </text>
	
    <video name="md_video">
        <origin>0.5 0.5</origin>
        <pos>0.74 0.25</pos>
        <maxSize>0.3 0.4</maxSize>
		<delay>1</delay>
        <zIndex>50</zIndex>
	</video>
		
    <image name="background" extra="true">
        <path>./_art/backgrounds/${system.theme}.jpg</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
		<zIndex>0</zIndex>
    </image>
	
    <image name="dark" extra="true">
        <path>./_art/assets/back.png</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
		<zIndex>1</zIndex>
    </image>

    <gridtile name="default">
        <backgroundColor>FFFFFF00</backgroundColor>
        <backgroundCornerSize>9 9</backgroundCornerSize>
        <selectionMode>image</selectionMode>
        <padding>5 5</padding>
    </gridtile>
	
    <text name="md_description">
		<fontPath>./_art/Acre.otf</fontPath>
	    <color>FFFFFF99</color>
        <fontSize>0.03</fontSize>
	    <alignment>left</alignment>
        <forceUppercase>0</forceUppercase>
        <lineSpacing>1</lineSpacing>
	    <pos>0.003 0.08</pos>
	    <size>0.464 0.42</size>
    </text>
    </view>

    <!--Screen-->
    <view name="screen">
    <text name="clock">
	  <fontPath>./_art/Acre.otf</fontPath>
      <fontSize>0.035</fontSize>
	  <color>FFFFFF</color>
      <pos>0.88 -0.01</pos>
      <size>0.2 0.058</size>
      <alignment>left</alignment>
      <verticalAlignment>center</verticalAlignment>
    </text>
    </view>
	
	<view name="menu">
  
    <menuBackground name="menubg">
	 <color>202020</color>
    </menuBackground>
	
	<menuText name="menutext, menutitle">
	  <fontPath>./_art/Acre.otf</fontPath>
	  <fontSize>.038</fontSize>
	  <color>ffffff</color>
	</menuText>
	
	<menuText name="menufooter, menutextsmall">
      <fontPath>./_art/Acre.otf</fontPath>
      <fontSize>.029</fontSize>		 
      <color>ffffff</color>
    </menuText>
	
	<menuTextEdit name="menutextedit">
      <inactive>./_art/assets/textinput_inactive.png</inactive>
      <active>./_art/assets/textinput_active.png</active>
    </menuTextEdit>
	
  </view>
	
</theme>
